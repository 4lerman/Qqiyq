extends ../layouts/layout.pug

block content
    h2(class='page-header')=book.title
    img(height='150' width='100' src=book.coverImagePath)
    div Author: #{book.author.name}
    div Publish Date: #{book.publishDate.toDateString()}
    div Page Count: #{book.pageCount}
    div Description: #{book.description}
    a(href=`/books/${book.id}/edit`) Edit
    - url = `/books/${book.id}`
    include ../partials/deleteForm
    a(href=`/authors/${book.author.id}`) View Author